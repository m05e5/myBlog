<div class = 'container'>
  <div class="user">
    <div class="user-head">
      <img src=<%= @user.photo %> class='user-img' alt='hello world'>
      <div class='user-info'>
        <h2>Name: <%= @user.name %></h2><br>
        <div class='u_post_count'>
          <p>Number of posts: <%= @user.post_counter %> </p>
        </div>
      </div>
    </div>
    <div class='user-bio'>
      <h3>Bio</h3>
      <%= @user.bio %>
    </div>
  </div>
  <% @posts.each do |post| %>
    <div class="post">
      <h2> <%= post.title %> <%= post.id %></h2>
      <div class='long-text'><%= post.text %></div>
      <div class="counter"><p>Comments: <%= post.comment_counter %>,Likes: <%= post.like_counter %><p></div>
      <div class='comments'>
        <% Comment.where(post_id: post.id).limit(5).order(created_at: :desc).each do |comment| %>
          <p><b><%= User.find_by(id: comment.user_id).name %>: </b><%= comment.text %></p>
        <% end %>
      </div>
    </div>
  <% end %>
</div>